<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="50sp"
            android:gravity="center"
            android:padding="30sp"
            android:text="List View, Recycle View Buku, dan Recycle Buah by Kardiko Anando"
            android:textAlignment="center"
            android:textColor="#070003"
            android:textSize="32sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/btnClickHere"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="50sp"
            android:backgroundTint="#4BA844"
            android:padding="20sp"
            android:text="Click Here!"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4BA844"
            android:padding="20sp"
            android:text="List View "
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRecycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4BA844"
            android:padding="20sp"
            android:text="Recycle View"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnRecycleBuah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4BA844"
            android:padding="20sp"
            android:text="Recycle Buah"
            android:textSize="16sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>